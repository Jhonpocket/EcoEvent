<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriaActivity"
    android:background="@color/white">



    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />
        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/app_title"
            android:textAlignment="center"
            android:textColor="@color/primary_text_color"
            android:textSize="42sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Logout Icon -->
    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/logout"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Body Section -->

    <!-- Bottom Navigation -->

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_corners"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:visibility="visible">

        <!-- Tipo TextView -->

        <!-- Tipo Spinner -->
        <TextView
            android:id="@+id/textTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:text="@string/tipo"
            android:textColor="@color/color_text"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinner_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="0dp"
            android:padding="8dp"
            android:background="@drawable/spinner_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/color_text"/>

        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:text="@string/cantidadEdit"
            android:textColor="@color/color_text"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/cantidad"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textColor="@color/color_text"
            android:textColorHint="@color/primary_text_color" />

        <!-- Mes TextView -->
        <TextView
            android:id="@+id/txtcosto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:text="@string/costo"
            android:textColor="@color/color_text"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Mes TextView -->
        <EditText
            android:id="@+id/et_costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/costohit"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textColor="@color/color_text"
            android:textColorHint="@color/primary_text_color" />

        <TextView
            android:id="@+id/txtMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:text="@string/mes"
            android:textColor="@color/color_text"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Mes Spinner -->

        <!-- Save Button -->

        <Spinner
            android:id="@+id/spinner_mes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="0dp"
            android:padding="8dp"
            android:background="@drawable/spinner_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/color_text"
            android:textColorHint="@color/primary_text_color"/>


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="88dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_corners_button"
            android:backgroundTint="#2F651C"
            android:text="@string/guardar"
            android:textAlignment="center"
            android:textAllCaps="false" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginBottom="4dp"
        android:background="@color/menu_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
